<% layout("./layouts/layout.eta") %>
<h1>Shared shopping lists</h1>
<% if (Number(it.lists_count) === 0) { %>
<h2>No shopping lists yet.</h2>
<% } else { %>
<h2>Statistics:</h2>
<ul>
  <li>Shopping lists: <%= it.lists_count %></li>
  <li>Shopping list items: <%= it.items_count %></li>
</ul>
<% }%>

<a href="/lists">Lists</a>